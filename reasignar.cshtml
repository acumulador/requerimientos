     sql = "UPDATE tareas_req SET us_anterior = us_asignado, us_asignado = '" + fr_Usuario + "', fechai = '" + myFecha + "' WHERE nreq = '" + fr_NroReq + "'";

    if(IsPost)
    {
        var datos = conexionDB.Query (sql);
        sw = true;
    }
}

